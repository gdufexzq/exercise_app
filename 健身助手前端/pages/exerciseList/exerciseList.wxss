.swiper-block {
height: 700rpx;
width: 100%;
margin-top: 15px;
}

.swiper-item {
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
overflow: unset;
position: relative;
}

.swiper-item view{
position: absolute;
left: 0;
right: 0;
bottom: 10%;
line-height: 60rpx;
text-align: center;
z-index: 999;
}

.slide-image {
height: 400rpx;
width: 480rpx;
border-radius: 9rpx;
box-shadow: 0px 0px 30rpx rgba(0, 0, 0, 0.2);
margin: 0rpx 30rpx;
z-index: 1;
}

.active {
transform: scale(1.15);
transition: all 0.2s ease-in 0s;
z-index: 20;
}
