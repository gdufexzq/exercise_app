/* pages/orderlist/orderlist.wxss */

.container {
  width: 100%;
  height: 100%;
  /* background-color: plum; */
  display: flex;
  flex-direction: column;
}
.nav {
/* background: red; */
  height: 50px;
  width: 100%;
  display: flex;
}
.nav button::after {
border: none;
}

.nav view {
flex: 1;
  text-align: center;
  line-height: 50px;
  color: #bfc2c7;
}
.select {
  color: #584F60;
} 

.order_info {
margin: 0rpx 0rpx;
width: 96%;
}


.product_img {
width: 170rpx;
height: 170rpx;
/* border-radius: 35rpx; */
}


.order_info>image,view {
float: left;
}

.product_count{
  float: right;
}

.info text {
display: flex;
margin: 0rpx 20rpx;
font-size: 30rpx;
}

.total_info {
  width: 100%;
border-bottom: 5rpx solid #efefef;
}
