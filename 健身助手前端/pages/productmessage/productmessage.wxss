/* 弹框设计 */

/* 弹窗样式 */
/*弹框背景*/ 
.drawer_screen {
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
z-index: 1000;
background: #000;
opacity: 0.5;
overflow: hidden;
} 
/*弹框后原来的背景设置*/ 
.drawer_box {
width: 650rpx; 
overflow: hidden; 
position: fixed; 
top: 50%; 
left: 0; 
z-index: 1001; 
background: #FAFAFA; 
margin: -150px 50rpx 0 50rpx; 
border-radius: 3px; 
}
.drawer_title{
display: flex;
justify-content: center;
align-items: center;
left: 30rpx;
padding:15px;
font: 20px "microsoft yahei";
text-align: left;
} 
.drawer_title image {
  width: 150rpx;
  height: 120rpx;
  margin: 10rpx 20rpx 0rpx 0rpx;
  float: left;
  
}
/* 设置字体 */
.drawer_box view > text:first-child {
font-size: 40rpx;
margin-left: 80rpx;
width: 200rpx;
}

.drawer_content {
height: 120px;
overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.drawer_content > view {
display: flex;
flex-direction: row;
}

